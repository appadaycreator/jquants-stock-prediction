{
  "metadata": {
    "version": "2.0",
    "description": "銘柄コードマッピング（2024年1月以降の新形式対応）",
    "last_updated": "2025-01-04",
    "supported_formats": [
      "従来形式: 4桁数字（例: 7203）",
      "新形式: アルファベット+4桁数字（例: A1234）"
    ]
  },
  "mappings": {
    "legacy_to_new": {
      "7203": "7203",
      "8035": "8035",
      "6758": "6758"
    },
    "new_to_legacy": {
      "A1234": "A1234",
      "B0001": "B0001"
    }
  },
  "validation_rules": {
    "legacy_format": {
      "pattern": "^\\d{4}$",
      "description": "従来の4桁数字形式"
    },
    "new_format": {
      "pattern": "^[A-Za-z]\\d{4}$",
      "description": "新形式（アルファベット+4桁数字）"
    },
    "combined_pattern": "^([A-Za-z]\\d{4}|\\d{4})$",
    "description": "両形式に対応"
  },
  "examples": {
    "legacy_codes": [
      "7203",
      "8035", 
      "6758",
      "9875"
    ],
    "new_codes": [
      "A1234",
      "B0001",
      "C9999"
    ]
  }
}