# J-Quants株価予測システム 環境変数設定例
# このファイルを .env にコピーして実際の値を設定してください

# 環境設定
ENVIRONMENT=production  # development, staging, production
DEBUG=false

# J-Quants API認証情報
# 認証ガイド最終版の方針：IDトークンは環境変数に保存しません（短期キャッシュのみ）
# 必要なのはメール/パスワードのみです。IDトークン/リフレッシュトークンは設定しないでください。
JQUANTS_EMAIL=your_email@example.com
JQUANTS_PASSWORD=your_password
# JQUANTS_ID_TOKEN=   # 設定しない（docs/AUTH_FINAL_GUIDE.md を参照）
# JQUANTS_REFRESH_TOKEN=   # 設定しない（短期キャッシュで自動管理）

# API設定
API_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT=100

# データ取得設定
TARGET_DATE=20240301
OUTPUT_FILE=stock_data.csv

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=jquants.log

# パフォーマンス設定
MAX_WORKERS=4
MEMORY_LIMIT=2GB

# 予測設定
TEST_SIZE=0.2
RANDOM_STATE=42
PRIMARY_MODEL=xgboost
COMPARE_MODELS=false

# セキュリティ設定
ENABLE_SSL=true
ALLOWED_ORIGINS=localhost:3000,*.github.io

# データベース設定（将来の拡張用）
# DATABASE_URL=sqlite:///jquants.db
# REDIS_URL=redis://localhost:6379

# 外部サービス設定（将来の拡張用）
# SENTRY_DSN=your_sentry_dsn
# SLACK_WEBHOOK_URL=your_slack_webhook_url
