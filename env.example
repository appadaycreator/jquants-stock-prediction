# J-Quants株価予測システム 環境変数設定例
# このファイルを .env にコピーして実際の値を設定してください

# 環境設定
ENVIRONMENT=production  # development, staging, production
DEBUG=false

# J-Quants API認証情報
JQUANTS_EMAIL=your_email@example.com
JQUANTS_PASSWORD=your_password

# API設定
API_TIMEOUT=30
MAX_RETRIES=3
RATE_LIMIT=100

# データ取得設定
TARGET_DATE=20240301
OUTPUT_FILE=stock_data.csv

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=jquants.log

# パフォーマンス設定
MAX_WORKERS=4
MEMORY_LIMIT=2GB

# 予測設定
TEST_SIZE=0.2
RANDOM_STATE=42
PRIMARY_MODEL=xgboost
COMPARE_MODELS=false

# セキュリティ設定
ENABLE_SSL=true
ALLOWED_ORIGINS=localhost:3000,*.github.io

# データベース設定（将来の拡張用）
# DATABASE_URL=sqlite:///jquants.db
# REDIS_URL=redis://localhost:6379

# 外部サービス設定（将来の拡張用）
# SENTRY_DSN=your_sentry_dsn
# SLACK_WEBHOOK_URL=your_slack_webhook_url
